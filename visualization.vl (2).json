{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": "Earthquakes of magnitude 4 or large between 4 Oct 2020 and 10 Oct 2020",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/upat0003/FIT3179_HW9/main/worldmap.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/upat0003/FIT3179_HW9/main/earthquake.csv"
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"}
      },
      "layer": [
        {
          "mark": {"type": "circle", "tooltip": {"content": "data"}},
          "encoding": {
            "size": {
              "field": "mag",
              "type": "quantitative",
              "scale": {"domain": [4, 8]}
            },
            "color": {
              "field": "depth",
              "type": "quantitative",
              "scale": {"scheme": "reds"}
            }
          }
        }
      ]
    }
  ],
  "config": {}
}